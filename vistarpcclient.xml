<?xml version="1.0" encoding="UTF-8"?>
<project name="javavistarpcclient" default="all">
  
  
  <property file="vistarpcclient.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="128m"/>
  <patternset id="ignored.files">
    <exclude name="**/CVS/**"/>
    <exclude name="**/SCCS/**"/>
    <exclude name="**/RCS/**"/>
    <exclude name="**/rcs/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/.pyc/**"/>
    <exclude name="**/.pyo/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/*.lib/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/.bundle/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
    <exclude name="**/*.orig/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.war"/>
    <include name="*.ear"/>
    <include name="*.apk"/>
    <include name="*.zip"/>
    <include name="*.swc"/>
    <include name="*.ane"/>
    <include name="*.egg"/>
    <include name="*.jar"/>
  </patternset>
  <patternset id="compiler.resources">
    <include name="**/?*.properties"/>
    <include name="**/?*.xml"/>
    <include name="**/?*.gif"/>
    <include name="**/?*.png"/>
    <include name="**/?*.jpeg"/>
    <include name="**/?*.jpg"/>
    <include name="**/?*.html"/>
    <include name="**/?*.dtd"/>
    <include name="**/?*.tld"/>
    <include name="**/?*.ftl"/>
  </patternset>
  
  
  <!-- Global Libraries -->
  
  <!-- Modules -->
  
  <import file="${basedir}/module_javavistarpcclient.xml"/>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.javavistarpcclient" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.javavistarpcclient" description="build all modules"/>
  
  <target name="init.artifacts">
    <property name="artifacts.temp.dir" value="${basedir}/__artifacts_temp"/>
    <property name="artifact.output.rpc-client" value="${basedir}/out/artifacts/rpc_client"/>
    <mkdir dir="${artifacts.temp.dir}"/>
    <property name="temp.jar.path.rpc-client.jar" value="${artifacts.temp.dir}/rpc-client.jar"/>
  </target>
  
  <target name="artifact.rpc-client" depends="init.artifacts, compile.module.javavistarpcclient" description="Build &#39;rpc-client&#39; artifact">
    <property name="artifact.temp.output.rpc-client" value="${artifacts.temp.dir}/rpc_client"/>
    <mkdir dir="${artifact.temp.output.rpc-client}"/>
    <jar destfile="${temp.jar.path.rpc-client.jar}" duplicate="preserve" filesetmanifest="mergewithoutmain">
      <zipfileset dir="${javavistarpcclient.output.dir}"/>
    </jar>
    <copy file="${temp.jar.path.rpc-client.jar}" tofile="${artifact.temp.output.rpc-client}/rpc-client.jar"/>
  </target>
  
  <target name="build.all.artifacts" depends="artifact.rpc-client" description="Build all artifacts">
    <mkdir dir="${artifact.output.rpc-client}"/>
    <copy todir="${artifact.output.rpc-client}">
      <fileset dir="${artifact.temp.output.rpc-client}"/>
    </copy>
    
    <!-- Delete temporary files -->
    <delete dir="${artifacts.temp.dir}"/>
  </target>
  
  <target name="all" depends="build.modules, build.all.artifacts" description="build all"/>
</project>